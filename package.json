{
  "name": "gigachad",
  "displayName": "Gigachad Scripts Runner",
  "description": "Easy script execution from package.json or custom configurations, with optional Docker support.",
  "version": "0.0.4",
  "publisher": "RicardoFreitas7",
  "icon": "img/icon-giga.png",
  "author": {
    "name": "Ricardo Freitas",
    "email": "freitasdev7@gmail.com"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Ricardofreitasdev/vscode-gigachad.git"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "comandos",
    "personalizados",
    "gigachad",
    "terminal"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gigachad.toggleFavorite",
        "title": "Adicionar/Remover dos Favoritos",
        "category": "Gigachad"
      },
      {
        "command": "gigachad.viewHistory",
        "title": "Ver Histórico",
        "category": "Gigachad"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Comandos personalizados",
      "properties": {
        "gigachad.customScripts": {
          "type": "array",
          "description": "Configurações de projetos com comandos específicos",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Nome do comando personalizado"
              },
              "command": {
                "type": "string",
                "description": "Comando para ser executado"
              },
              "group": {
                "type": "string",
                "description": "Projeto onde esse comando será executado"
              }
            },
            "required": [
              "name",
              "command"
            ]
          }
        },
        "gigachad.maxHistorySize": {
          "type": "number",
          "default": 20,
          "description": "Número máximo de execuções no histórico"
        },
        "gigachad.maxFavoritesSize": {
          "type": "number",
          "default": 10,
          "description": "Número máximo de scripts favoritos"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "esbuild": "^0.24.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
